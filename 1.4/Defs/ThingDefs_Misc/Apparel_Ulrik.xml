        <graphicData>
			<texPath>Apparel/Adorned/Adorned_Warrior/Adorned_Warrior</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
       
       <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>170</costStuffCount>
        <costList>
            <DankPyon_Linen>70</DankPyon_Linen>
        </costList>

        <statBases>
            <WorkToMake>38000</WorkToMake>
            <MaxHitPoints>290</MaxHitPoints>
            <Mass>15</Mass>
            <StuffEffectMultiplierArmor>0.76</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
            <Insulation_Cold>15</Insulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.8</MoveSpeed>
        </equippedStatOffsets>

        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Adorned/Adorned_Warrior/Adorned_Warrior</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags>
				<li>DankPyon_Oathtaker</li>
            </tags>
            <layers>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="DankPyon_AdornedArmorBase">
        <defName>DankPyon_Apparel_AdornedHeavyPlate</defName>
        <label>full plate(Adorned)</label>
        <description>A heavy plate coverd by a thick riveted jacket and reinforced vambraces. The layered structure provides an ample amount of warmth. Typically worn by the oathbound, the best of the oathtakers, finely decorated with trophies and religious symbols.</description>
        <graphicData>
			<texPath>Apparel/Adorned/Adorned_FullPlate/Adorned_FullPlate</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
       
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <costStuffCount>200</costStuffCount>
        <costList>
            <Gold>5</Gold>
            <DankPyon_Linen>70</DankPyon_Linen>
        </costList>
        
        <statBases>
            <WorkToMake>45000</WorkToMake>
            <MaxHitPoints>310</MaxHitPoints>
            <Mass>17</Mass>
            <StuffEffectMultiplierArmor>0.95</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
            <Insulation_Cold>15</Insulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>20</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-1.2</MoveSpeed>
            <SocialImpact>0.30</SocialImpact>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.1</SlaveSuppressionOffset>
        </equippedStatOffsets>

        <recipeMaker>
            <skillRequirements>
                <Crafting>12</Crafting>
            </skillRequirements>
        </recipeMaker>

        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Adorned/Adorned_FullPlate/Adorned_FullPlate</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <tags>
				<li>DankPyon_Oathbound</li>
            </tags>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <!--==================== Headgear ====================-->

</Defs>