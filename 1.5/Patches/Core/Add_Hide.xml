	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Human"]/butcherProducts</xpath>
		<match Class="PatchOperationRemove">
			<xpath>Defs/ThingDef[defName="Human"]/butcherProducts</xpath>
		</match>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName = "Human"]</xpath>
		<value>
			<butcherProducts>
				<DankPyon_Hide_Human>1</DankPyon_Hide_Human>
			</butcherProducts>
		</value>
	</Operation>

	<!-- Change the leather amounts on the following creatures. First we remove this tag in case some other mod may have added it -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Rat"]/statBases/LeatherAmount</xpath>
		<match Class="PatchOperationRemove">
			<xpath>Defs/ThingDef[defName="Rat"]/statBases/LeatherAmount</xpath>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Turkey"]/statBases/LeatherAmount</xpath>
		<match Class="PatchOperationRemove">
			<xpath>Defs/ThingDef[defName="Turkey"]/statBases/LeatherAmount</xpath>
		</match>
	</Operation>	
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Bear_Grizzly"]/statBases/LeatherAmount</xpath>
