<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Replace mineableScatterCommonality of Steel, Component, and Steel  -->
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "MineableComponentsIndustrial"  or defName = "MineableSteel"]/building/mineableScatterCommonality</xpath>
				<value>
					<mineableScatterCommonality>0</mineableScatterCommonality>
				</value>
			</li>
		</operations>
	</Operation>

	<!-- Replace label Steel -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Steel"]/label</xpath>
		<value>
			<label>steel ingot</label>
		</value>
	</Operation>

	<!-- Replace stuffAdjective Steel -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName = "Steel"]/stuffProps</xpath>
		<value>
			<stuffAdjective>steel</stuffAdjective>
		</value>
	</Operation>

	<!-- Replace mineableThing Silver-->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "MineableSilver"]/building/mineableThing</xpath>
		<value>
			<mineableThing>DankPyon_SilverOre</mineableThing>
		</value>
	</Operation>

	<!-- Replace mineableThing Gold -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "MineableGold"]/building/mineableThing</xpath>
		<value>
			<mineableThing>DankPyon_GoldOre</mineableThing>
		</value>
	</Operation>
	
	<!-- Replace mineable Plasteel -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="MineablePlasteel"]/building/mineableThing</xpath>
			<value>
				<mineableThing>DankPyon_PlasteelOre</mineableThing>
			</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plasteel"]/graphicData/texPath</xpath>
			<value>
				<texPath>Resources/PlasteelIngot</texPath>
			</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName = "MineablePlasteel"]/building/mineableScatterCommonality</xpath>
			<value>
				<mineableScatterCommonality>0.05</mineableScatterCommonality>
			</value>
	</Operation>
	
	<!-- Add Golem for events -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/ThingDef[defName="MineableGold"]</xpath>
		<value>
			<li Class="MedievalOverhaul.GolemSpawn">
				<kindDef>DankPyon_Golem_Gold</kindDef>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/ThingDef[defName="MineableSilver"]</xpath>
		<value>
			<li Class="MedievalOverhaul.GolemSpawn">
				<kindDef>DankPyon_Golem_Silver</kindDef>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>/Defs/ThingDef[defName="MineableSteel"]</xpath>
		<value>
			<li Class="MedievalOverhaul.GolemSpawn">
				<kindDef>DankPyon_Golem_Steel</kindDef>
			</li>
		</value>
	</Operation>
	
</Patch>