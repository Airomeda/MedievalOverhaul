<!-- New Schematics -->

	<RulePackDef>
	  <defName>DankPyon_Namer_Schematic</defName>
	  <include>
		<li>ArtNameUtility</li>
	  </include>
	  <rulePack>
		<rulesStrings>
		  <!-- General Titles -->
		  <li>title->The Art of [subject_primary]</li>
		  <li>title->Mastery of [subject_primary]</li>
		  <li>title->Secrets of [subject_primary]</li>
		  <li>title->Crafting [subject_primary]</li>
		  <li>title->Exploring [subject_primary]</li>
		  <li>title->The Legacy of [subject_primary]</li>
		  <li>title->[randAdjective] [subject_primary]</li>
		  <li>title->[randAdjective] Techniques of [subject_primary]</li>
		  <li>title->[randAdjective] Secrets of [subject_primary]</li>
		  <li>title->[randAdjective] Mastery of [subject_primary]</li>
		  <li>title->[randAdjective] Exploration of [subject_primary]</li>
		  <li>title->[randAdjective] Legacy of [subject_primary]</li>
		  
		  <!-- Authored Titles -->
		  <li>maybe_authored_title->[author_gen]'s Guide to [subject_primary]</li>
		  <li>maybe_authored_title->[author_gen]'s Manual for [subject_primary]</li>
		  <li>maybe_authored_title->[author_gen]'s Handbook of [subject_primary]</li>
		  
		  <!-- Various words that can slot cleanly into titles -->
		  <li>randAdjective->Ancient</li>
		  <li>randAdjective->Legendary</li>
		  <li>randAdjective->Forgotten</li>
		  <li>randAdjective->Mystic</li>
		  <li>randAdjective->Rustic</li>
		  <li>randAdjective->Knightly</li>
		  <li>randAdjective->Honorable</li>
		  <li>randAdjective->Noble</li>
		  <li>randAdjective->Chivalrous</li>
		  <li>randAdjective->Glorious</li>
		  <li>randAdjective->Valor</li>
		  <li>randAdjective->Royal</li>
		  <li>randAdjective->Enchanted</li>
		  <li>randAdjective->Shadowed</li>
		  <li>randAdjective->Fabled</li>
		  <li>randAdjective->Mythical</li>
		  
		  <!-- Authored Names -->
		  <li>author_gen->[ANYPAWN_nameIndef]</li>
		  <li>author_gen->[ANYPAWN_nameIndef] the Wise</li>
		  <li>author_gen->[ANYPAWN_nameIndef] the Brave</li>
		  <li>author_gen->[ANYPAWN_nameIndef] the Learned</li>
		  <li>author_gen->[ANYPAWN_nameIndef] the Valiant</li>
		  
		</rulesStrings>
	  </rulePack>
	</RulePackDef>

  
	<ThingDef ParentName="BookBase">
		<defName>DankPyon_Schematic</defName>
		<label>schematic</label>
		<description>A book which describes technology and methods for using it. Reading schematics can help unlock new technologies.</description>
		<graphicData>
			<texPath>Things/Item/Book/Schematic/Schematic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.8</drawSize>
		</graphicData>
		<uiIconPath>Things/Item/Book/Schematic/Schematic</uiIconPath>
		<statBases>
			<MarketValue>150</MarketValue>
		</statBases>
		<comps>
			<li Class="CompProperties_Book">
				<!-- <nameMaker>Namer_Schematic</nameMaker> -->
				<!-- <descriptionMaker>Description_Schematic</descriptionMaker> -->
				<ageYearsRange>100~200</ageYearsRange>
				<openGraphic>
					<texPath>Things/Item/Book/Schematic/Schematic_Open</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>0.7</drawSize>
				</openGraphic>
				<verticalGraphic>
					<texPath>Things/Item/Book/Schematic/Schematic_Vertical</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<addTopAltitudeBias>true</addTopAltitudeBias>
				</verticalGraphic>
				<doers>
					<li Class="BookOutcomeProperties_GainResearch">
						<tab>DankPyon_MedievalResearchTab</tab>

					</li>
				</doers>
			</li>
		</comps>
	</ThingDef>
