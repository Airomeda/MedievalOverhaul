	<!-- Buildings -->
	<ThingDef ParentName="BuildingNaturalBase">
		<defName>DankPyon_TarPit</defName>
		<label>tar pit</label>
		<description>A natural source of tar. \n\nDeconstruct to harvest resources.</description>
		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Natural/TarPit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>Transparent</shaderType>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		<uiIconScale>0.5</uiIconScale>
		<altitudeLayer>Floor</altitudeLayer>
		<rotatable>false</rotatable>
		<destroyable>true</destroyable>
		<useHitPoints>false</useHitPoints>
		<tickerType>Normal</tickerType>
		<selectable>true</selectable>
		<size>(2,2)</size>
		<neverOverlapFloors>true</neverOverlapFloors>
		<blocksPlants>true</blocksPlants>
		<building>
			<isEdifice>true</isEdifice>
			<claimable>true</claimable>
			<deconstructible>true</deconstructible>
		</building>
		<statBases>
			<WorkToMake>30000</WorkToMake>
		</statBases>
		<costList>
			<DankPyon_Tar>200</DankPyon_Tar>
		</costList>
	</ThingDef>

	<ThingDef ParentName="BuildingNaturalBase">
		<defName>DankPyon_BeeHive</defName>
