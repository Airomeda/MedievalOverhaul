		<rotatable>false</rotatable>
		<fillPercent>0.5</fillPercent>
		<statBases>
			<MaxHitPoints>130</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<pathCost>42</pathCost>
		<killedLeavings>
			<DankPyon_Honeycomb>20</DankPyon_Honeycomb>
			<DankPyon_QueenBee>1</DankPyon_QueenBee>
		</killedLeavings>
		<building>
			<isEdifice>false</isEdifice>
			<claimable>true</claimable>
			<deconstructible>false</deconstructible>
		</building>
	</ThingDef>

	<ThingDef ParentName="BuildingNaturalBase" Name="DankPyon_HornetNestBase">
		<defName>DankPyon_HornetNest</defName>
		<label>hornet nest</label>
		<description>A hive of giant insects. If activated, it will spawn additional insects and hives over time, as well as valuable hornet honey.</description>
		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Natural/HornetNest</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>4,4</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>false</rotatable>
		<fillPercent>0.5</fillPercent>
		<statBases>
			<MaxHitPoints>230</MaxHitPoints>
			<Flammability>0.5</Flammability>
		</statBases>
		<pathCost>42</pathCost>
		<receivesSignals>true</receivesSignals>
		<blockWind>true</blockWind>
		<tickerType>Normal</tickerType>
		<passability>PassThroughOnly</passability>
		<killedLeavings>
			<DankPyon_HornetHoney>30</DankPyon_HornetHoney>
		</killedLeavings>
		<comps>
			<li Class="CompProperties_CanBeDormant">
				<startsDormant>true</startsDormant>
				<canWakeUpFogged>false</canWakeUpFogged>
			</li>
			<li Class="CompProperties_WakeUpDormant"/>
			<li Class="CompProperties_SelfhealHitpoints">
				<ticksPerHeal>6000</ticksPerHeal>
			</li>
			<li Class="CompProperties_Spawner">
				<thingToSpawn>DankPyon_HornetHoney</thingToSpawn>
				<spawnCount>2</spawnCount>
				<spawnIntervalRange>26000~30000</spawnIntervalRange>
				<spawnMaxAdjacent>20</spawnMaxAdjacent>
				<spawnForbidden>true</spawnForbidden>
				<saveKeysPrefix>jelly</saveKeysPrefix>
			</li>
			<li Class="CompProperties_Spawner">
				<thingToSpawn>DankPyon_HornetJelly</thingToSpawn>
				<spawnCount>10</spawnCount>
				<spawnIntervalRange>26000~30000</spawnIntervalRange>
				<spawnMaxAdjacent>13</spawnMaxAdjacent>
				<spawnForbidden>true</spawnForbidden>
				<saveKeysPrefix>jelly</saveKeysPrefix>
			</li>
			<li Class="MedievalOverhaul.CompProperties_HornetNestSpawner">
				<spawnablePawnKinds>
					<li>DankPyon_Deathstinger</li>
				</spawnablePawnKinds>
				<spawnSound>Hive_Spawn</spawnSound>
				<initialPawnCount>1</initialPawnCount>
				<maxPawnCount>4</maxPawnCount>
				<pawnSpawnIntervalDays>0.1~0.2</pawnSpawnIntervalDays>
				<defendRadius>5</defendRadius>
			</li>
			<li Class="CompProperties_HeatPusher">
				<heatPerSecond>6</heatPerSecond>
				<heatPushMaxTemperature>38</heatPushMaxTemperature>
			</li>
			<li Class="CompProperties_SpawnerFilth">
				<filthDef>Filth_Slime</filthDef>
				<spawnCountOnSpawn>10</spawnCountOnSpawn>
				<spawnMtbHours>4</spawnMtbHours>
				<spawnRadius>5</spawnRadius>
			</li>
			<!--li Class="CompProperties_Maintainable">
				<ticksHealthy>60000</ticksHealthy>
				<ticksNeedsMaintenance>60000</ticksNeedsMaintenance>
				<damagePerTickRare>10</damagePerTickRare>
			</li-->
		</comps>
	</ThingDef>

