<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BasePawn">
		<defName>DankPyon_RusticMimic</defName>
		<label>Rustic Mimic</label>
		<description>mimic</description>
		<statBases>
			<MoveSpeed>4.4</MoveSpeed>
			<ArmorRating_Blunt>0.24</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.11</ArmorRating_Sharp>
			<PsychicSensitivity>0.5</PsychicSensitivity>
			<ToxicResistance>1</ToxicResistance>
			<Flammability>1</Flammability>
			<ComfyTemperatureMin>-100</ComfyTemperatureMin>
			<ComfyTemperatureMax>250</ComfyTemperatureMax>
			<MeatAmount>0</MeatAmount>
		</statBases>
		<tools>
			<li>
				<label>left side</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>12</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>right side</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>12</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
				<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			</li>
			<li>
				<label>lid</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>12.8</power>
				<cooldownTime>2.6</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.9</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>5</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
		</tools>
		<race>
			<body>QuadrupedAnimalWithPawsAndTail</body>
			<!-- <fleshType>DankPyon_Schrat</fleshType> -->
			<baseBodySize>2</baseBodySize>
			<baseHealthScale>2</baseHealthScale>
			<needsRest>false</needsRest>
			<hasGenders>false</hasGenders>
			<foodType>None</foodType>
			<lifeExpectancy>1</lifeExpectancy>
			<hediffGiverSets Inherit="False">
				<li>DankPyon_NoPainHediffGiver</li>
			</hediffGiverSets>
			<bloodDef>Filth_RubbleBuilding</bloodDef>
			<intelligence>ToolUser</intelligence><!--Probably could use it for tree log weapons in the future -->
			<thinkTreeMain>Animal</thinkTreeMain>
			<lifeStageAges>
				<li>
					<def>AnimalAdult</def>
					<minAge>0</minAge>
					<soundWounded>Pawn_Mech_Centipede_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Centipede_Death</soundDeath>
					<soundCall>Pawn_Mech_Centipede_Call</soundCall>
				</li>
			</lifeStageAges>
			<soundCallIntervalRange>1000~2000</soundCallIntervalRange>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
		</race>
		<soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
		<!--butcherProducts>
			<DankPyon_RawDarkWood>20</DankPyon_RawDarkWood>
		</butcherProducts-->
	</ThingDef>

