	<!--=============== Schrat Drops ====================-->
	<ThingDef ParentName="DankPyon_AlchemyIngredientsBase">
		<defName>DankPyon_SchratHeart</defName>
		<label>heart of the forest</label>
		<description>A sphere of life energy, still feeding few writhing vines. Its pulsing rate increases when held in hand, greedily drawing heat from the limb. An important ingredient in numerous occult rituals, certainly a valuable possession.</description>
		<graphicData>
			<texPath>Special/SchratHeart</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>

		<statBases>
			<MarketValue>3250</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>5</Mass>
			<Flammability>0.4</Flammability>
			<DeteriorationRate>0</DeteriorationRate>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="DankPyon_AlchemyIngredientsBase">
		<defName>DankPyon_AncientWood</defName>
		<label>ancient wood</label>
		<description>A dark oaken wood as ancient as time. The wood is renowned for its strength and durability to withstand physica blows. A perfect material to use for a shield.</description>
		<graphicData>
			<texPath>Special/AncientWood</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>

		<statBases>
			<MarketValue>2900</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.3</Flammability>
			<DeteriorationRate>0</DeteriorationRate>
		</statBases>
	</ThingDef>

	<ThingDef ParentName="DankPyon_AlchemyIngredientsBase">
		<defName>DankPyon_GlowingResin</defName>
		<label>glowing resin</label>
