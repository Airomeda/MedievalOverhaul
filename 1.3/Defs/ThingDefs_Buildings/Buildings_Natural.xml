<Defs>

    <!--================================ Coal Ore ======================================-->
        
    <ThingDef ParentName="RockBase">
        <defName>DankPyon_MineableCoal</defName>
        <label>coal ore</label>
        <description>Rock containing chunks of coal.</description>
        <graphicData>
            <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <color>(114,114,114)</color>
            <colorTwo>(57,53,52)</colorTwo>
        </graphicData>

        <statBases>
            <MaxHitPoints>1500</MaxHitPoints>
        </statBases>

        <building>
            <isResourceRock>true</isResourceRock>
            <mineableThing>DankPyon_Coal</mineableThing>
            <mineableYield>40</mineableYield>
            <mineableScatterCommonality>1</mineableScatterCommonality>
            <mineableScatterLumpSizeRange>30~40</mineableScatterLumpSizeRange>
        </building>
    </ThingDef>

